<?xml version="1.0" encoding="utf-8"?><!--content-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ui.Activities.InnerConversationActivity"
    tools:menu="inner_conversation_menu">

    <TextView
        android:id="@+id/no_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"
        android:text="NO CHATS YET"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/inner_conversation_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingBottom="30dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/loading_inner_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:foregroundGravity="fill"
        android:padding="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/invite_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Join chat"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <EditText
            android:id="@+id/chat_response_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_weight="6"

            android:hint="Enter message"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray_light" />

        <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_send_chat_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_24dp"
            app:backgroundTint="@color/gray_light"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal" />

    </LinearLayout>

</RelativeLayout>