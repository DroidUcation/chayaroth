<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="70dp"
        android:background="@drawable/background_agent_message">

        <TextView
            android:id="@+id/chanelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/chat_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/chanelIcon"
            android:layout_marginLeft="5dp"
            android:text="agent"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/chanelIcon"
            android:layout_marginTop="4dp"
            android:src="@drawable/play_btn"/>

        <ImageView
            android:id="@+id/pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/chanelIcon"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:src="@drawable/pause_btn"
            />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_visitor_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_alignTop="@+id/play_btn"
            android:layout_alignLeft="@+id/displayName"
            android:layout_alignStart="@+id/displayName"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="12:34"
            android:layout_alignTop="@+id/seekbar_visitor_record"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>