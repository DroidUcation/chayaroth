<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_inbox_items"
    android:paddingLeft="@dimen/padding_inbox_items"
    android:paddingRight="@dimen/padding_inbox_items"
    android:paddingBottom="3dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar1" />

    <ImageView
        android:id="@+id/online_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@id/avatar"
        android:layout_alignBottom="@id/avatar"
        android:layout_alignRight="@id/avatar"
        android:background="@drawable/online_point" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:text="Jenny Li" />

    <TextView
        android:id="@+id/last_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayName"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/chanelIcon"
        android:layout_toRightOf="@+id/chanelIcon"
        android:ellipsize="end"
        android:lines="1"
        android:text="aaaaaa"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/chanelIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/displayName"
        android:layout_alignStart="@id/displayName"
        android:layout_below="@id/displayName"
        android:layout_marginTop="5dp"
        android:text="12" />

    <TextView
        android:id="@+id/taken_by_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chanelIcon"
        android:layout_alignStart="@+id/chanelIcon"
        android:layout_below="@+id/last_sentence"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/taken_by_another_agent"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="11:12"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/unread"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/date"
        android:background="@drawable/online_point"
        android:gravity="center_vertical|center_horizontal"
        android:text="20"
        android:textColor="@color/white"
        android:visibility="invisible" />


</RelativeLayout>
