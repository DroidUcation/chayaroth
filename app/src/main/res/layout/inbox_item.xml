<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/padding_inbox_items">


    <!--<ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar"
        />-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar"
        app:civ_fill_color="@color/gray_light"/>

    <ImageView
        android:id="@+id/online_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/online_point"
        android:layout_alignBottom="@id/avatar"
        android:layout_alignBaseline="@id/avatar"
        android:layout_alignRight="@id/avatar"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenny Li"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:layout_toRightOf="@+id/avatar"
        android:layout_toEndOf="@+id/avatar" />

   <TextView
        android:id="@+id/last_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lines="1"
       android:ellipsize="end"
        android:layout_alignTop="@+id/online_point"
        android:layout_toRightOf="@+id/chanelIcon"
        android:layout_toEndOf="@+id/chanelIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <TextView
    android:id="@+id/chanelIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/avatar"
    android:layout_alignLeft="@id/displayName"
    android:layout_alignStart="@id/displayName"
    />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="11:12"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/unread"
        android:background="@drawable/online_point"
        android:layout_below="@id/date"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:text="20"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
       android:layout_alignParentRight="true"
        android:visibility="invisible"
        />


</RelativeLayout>
