    <TextView
        android:id="@+id/last_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waiting you..."
        android:textSize="12sp"
        android:lines="1"
        android:layout_alignTop="@+id/online_point"
        android:layout_toRightOf="@+id/chanel"
        android:layout_toEndOf="@+id/chanel"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="11:12"
        android:textSize="10sp"/>
    <ImageView
        android:id="@+id/chanel"
        android:background="@drawable/ic_phone_iphone_black_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatar"
        android:layout_alignLeft="@id/displayName"
        android:layout_alignStart="@id/displayName" />
    <TextView
        android:id="@+id/unread"
        android:background="@drawable/online_point"
        android:layout_below="@id/date"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:text="20"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
       android:layout_alignParentRight="true"
        android:visibility="invisible"
        />
