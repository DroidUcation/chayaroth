<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingRight="16dp"
    android:paddingLeft="50dp">

    <RelativeLayout
        android:id="@+id/agent_chat_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_agent_message"
        android:layout_marginLeft="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chanelIcon"
            android:text="@string/email_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="agent"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_alignParentTop="true"

            android:layout_toLeftOf="@+id/chanelIcon"
            android:layout_toStartOf="@+id/chanelIcon"
            android:textSize="10sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/displayName"
            android:id="@+id/mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textIsSelectable="true"
            android:textSize="14dp"
            android:autoLink="all"
            android:text="hi, what else?"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_below="@id/mess"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/03, 11:20"
            android:textSize="10sp"

            />
    </RelativeLayout>


</RelativeLayout>