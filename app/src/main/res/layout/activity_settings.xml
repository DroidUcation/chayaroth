<!--<?xml version="1.0" encoding="utf-8"?>--><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent">-->

<!--<fragment--><!--android:name="com.example.chaya.bontact.Ui.Fragments.SettingsFragment"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--android:tag=".SettingsFragment" />--><!--</FrameLayout>-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="30dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Ui.Activities.SettingsActivity">

        <!-- new msgs -->
        <TextView
            android:id="@+id/new_message_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/new_message_header"
            android:textColor="@color/purple"
            android:textSize="20dp" />
        <View
            android:id="@+id/new_message_underscore"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/new_message_header"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/new_message_enable_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_message_underscore"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/new_message_enable_sub_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_message_enable_txt"
            android:layout_marginTop="5dp"
            android:text="@string/new_message_description"
            android:textSize="15dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_message_enable_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_message_enable_txt" />

        <TextView
            android:id="@+id/new_message_sound_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_message_enable_sub_txt"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification_sound"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_message_sound_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_message_sound_txt"

            />

        <TextView
            android:id="@+id/new_message_vibrate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_message_sound_txt"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification_vibrate"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_message_vibrate_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_message_vibrate_txt"


            />

        <!-- new visitors -->
        <View
            android:id="@+id/border_visitors"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_below="@id/new_message_vibrate_txt"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/new_visitor_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border_visitors"
            android:layout_marginTop="25dp"
            android:text="@string/new_visitor_header"
            android:textColor="@color/purple"
            android:textSize="20dp" />
        <View
            android:id="@+id/new_visitors_underscore"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/new_visitor_header"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/new_visitor_enable_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_visitors_underscore"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/new_visitor_enable_sub_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_visitor_enable_txt"
            android:layout_marginTop="5dp"
            android:text="@string/new_visitor_description"
            android:textSize="15dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_visitor_enable_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_visitor_enable_txt" />

        <TextView
            android:id="@+id/new_visitor_sound_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_visitor_enable_sub_txt"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification_sound"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_visitor_sound_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_visitor_sound_txt"

            />

        <TextView
            android:id="@+id/new_visitor_vibrate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_visitor_sound_txt"
            android:layout_marginTop="16dp"
            android:text="@string/push_notification_vibrate"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/new_visitor_vibrate_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_visitor_vibrate_txt"


            />

        <!--general-->
        <View
            android:id="@+id/border_general"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_below="@id/new_visitor_vibrate_txt"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/general_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border_general"
            android:layout_marginTop="20dp"
            android:text="@string/general_header"
            android:textColor="@color/purple"
            android:textSize="20dp" />
        <View
            android:id="@+id/general_underscore"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/general_header"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/about_us_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/general_underscore"
            android:layout_marginTop="16dp"
            android:text="@string/about_us_title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/disconnect_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/about_us_txt"
            android:layout_marginTop="16dp"
            android:text="@string/disconnect_account_title"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/disconnect_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/disconnect_account_txt"
            android:src="@drawable/power_off" />


        <TextView
            android:id="@+id/app_version_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/disconnect_account_txt"
            android:layout_marginTop="16dp"
            android:text="@string/app_version_title"
            android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>

