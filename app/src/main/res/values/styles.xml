<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/purple_meduim</item>
        <item name="colorControlHighlight">@color/purple</item>
        <item name="colorSwitchThumbNormal">@color/orange_dark</item>
        <item name="actionButtonStyle">@style/CustomActionBar</item>
        <item name="android:actionButtonStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/gray_very_light</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <!--<item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>-->
    </style>

